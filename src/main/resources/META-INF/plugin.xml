<idea-plugin>
    <id>com.vidy.reactHooksHelper</id>
    <name>reactHooksHelper</name>
    <vendor email="vidy3587@gmail.com" url="https://github.com/boneVidy">boneVidy</vendor>
    <version>0.0.1</version>
    <description><![CDATA[
    react-hooks-helper<br>
    <a href="https://github.com/boneVidy/json2ts">https://github.com/boneVidy/react-hooks-helper</a>

    ]]></description>
    <change-notes>
        <![CDATA[<div>
        <p>1.a jetbrains plugin that can help code with react hooks</p>
    </div>]]>
    </change-notes>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.lang</depends>
    <depends>com.intellij.modules.platform</depends>
    <depends>JavaScript</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>
    <idea-version since-build="162"/>
    <actions>
        <action icon="Icons.pluginIcon" id="toUseCallback" class="actions.ToUseCallback" text="Convert to UseCallback" description="Convert to UseCallback">
            <add-to-group group-id="EditorPopupMenu" anchor="first"/>
            <add-to-group group-id="ProjectViewPopupMenu" anchor="after"/>
        </action>
        <action icon="Icons.pluginIcon" id="toUseMemo" class="actions.ToUseMemo" text="Convert to UseMemo" description="Convert to UseMemo">
            <add-to-group group-id="EditorPopupMenu" anchor="first"/>
            <add-to-group group-id="ProjectViewPopupMenu" anchor="after"/>
        </action>
        <action icon="Icons.pluginIcon" id="toUseState" class="actions.ToUseState" text="Convert to UseState" description="Convert to UseState">
            <add-to-group group-id="EditorPopupMenu" anchor="first"/>
            <add-to-group group-id="ProjectViewPopupMenu" anchor="after"/>
        </action>
    </actions>
</idea-plugin>
